generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id     Int     @id @default(autoincrement())
  nome   String
  email  String
  senha  String
  cargo  String
  nivel  String
  imagem String?
  status String
}

model Piloto {
  id          Int          @id @default(autoincrement())
  cpf         String       @unique
  nome        String
  status      String
  voos        Voo[]
  tripulacoes Tripulacao[]
}

model Veiculo {
  id          Int          @id @default(autoincrement())
  empresa     String
  tipo        String
  cod_Idf     String
  status      String
  manutencoes Manutencao[]
  voos        Voo[]
}

model Manutencao {
  id          Int       @id @default(autoincrement())
  data_inicio DateTime  @default(now())
  data_fim    DateTime?
  valor       Float
  descricao   String
  id_veiculo  Int
  veiculo     Veiculo   @relation(fields: [id_veiculo], references: [id])
}

model Voo {
  id          Int          @id @default(autoincrement())
  id_piloto   Int
  id_veiculo  Int
  data_saida  DateTime     @default(now())
  hora        DateTime     @default(now())
  destino     String
  descricao   String
  empresa     String
  valor_Min   Float
  valor_Max   Float
  piloto      Piloto       @relation(fields: [id_piloto], references: [id])
  veiculo     Veiculo      @relation(fields: [id_veiculo], references: [id])
  tripulacoes Tripulacao[]
  passagens   Passagem[]
}

model Passageiro {
  id              Int        @id @default(autoincrement())
  nome            String
  cpf             String     @unique
  passaporte      String     @unique
  data_nascimento String
  nacionalidade   String
  role            String     @default("Passageiro")
  email           String?
  senha           String?
  imagem          String?
  passagens       Passagem[]
  contatos        Contato[]
}

model Contato {
  id            Int        @id @default(autoincrement())
  id_passageiro Int
  numero_tel    String     @unique
  tipo          String
  passageiro    Passageiro @relation(fields: [id_passageiro], references: [id])
}

model Passagem {
  id            Int        @id @default(autoincrement())
  valor         Float
  tipo          String
  id_voo        Int
  id_passageiro Int
  poltrona      String
  descricao     String
  voo           Voo        @relation(fields: [id_voo], references: [id])
  passageiro    Passageiro @relation(fields: [id_passageiro], references: [id])
}

model Tripulacao {
  id                 Int     @id @default(autoincrement())
  id_voo             Int
  id_piloto          Int
  copiloto           String
  comissarios        String
  engenheiro_voo     String?
  navigator          String?
  tecnico_manutencao String?
  piloto             Piloto  @relation(fields: [id_piloto], references: [id])
  voo                Voo     @relation(fields: [id], references: [id])
}
